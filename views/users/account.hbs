    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/additional-methods.min.js"></script>

    <script>

        $("#addressForm").validate({
            rules: {
                name: {
                    required: true
                },
                house: {
                    required: true
                },
                locality: {
                    required: true
                },
                area: {
                    required: true
                },
                landmark: {
                    required: true
                },
                pincode: {
                    digits: true,
                    minlength: 6
                }
            },
            messages: {
                name: {
                    required: 'Enter a name'
                },
                house: {
                    required: 'Required'
                },
                locality: {
                    required: 'Required'
                },
                area: {
                    required: 'Required'
                },
                landmark: {
                    required: 'Required'
                },
                pincode: {
                    digits: 'Enter numbers only',
                    minlength: 'Pincode must have 6 numbers'
                }
            }
        })

        $("#passwordForm").validate({
            rules: {
                current: {
                    required: true,
                    minlength: 6
                },
                new: {
                    required: true,
                    minlength: 6
                },
                re: {
                    equalTo: '#new-pwd'
                }
            },
            messages: {
                current: {
                    required: "Enter your old password",
                    minlength: 'Your old password has more than 5 characters'
                },
                new: {
                    required: 'Enter a new password',
                    minlength: 'Enter a minimum of 6 characters'
                },
                re: {
                    required: 'Password not match'
                }
            }
        })

        $("#profileForm").validate({
            rules: {
                name: {
                    required: true,
                    lettersonly: true
                },
                email: {
                    required: true,
                    email: true
                }
            },
            messages: {
                name: {
                    required: 'Enter your name',
                    lettersonly: 'Only characters allowed'
                },
                email: {
                    required: 'Enter your email',
                    email: 'Invalid email ID'
                }
            }
        })
    </script>


