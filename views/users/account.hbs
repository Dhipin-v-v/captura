                                            <table class="table">
                                                <thead>
                                                    <tr>
                                                        <th scope="col">Order date</th>
                                                        <th scope="col">No. of products</th>
                                                        <th scope="col">Amount</th>
                                                        <th scope="col">Payment mode</th>
                                                        <th scope="col">Status</th>
                                                        <th scope="col"></th>
                                                        <th scope="col"></th>                                                                                                                   
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    {{#each orders}}
                                                    <tr>                                                        
                                                        <td class="order-td">{{this.date}}</td>
                                                        <td class="order-td">{{arrayLen this.products}}</td>
                                                        <td class="order-td">â‚¹{{this.net}}</td>
                                                        <td class="order-td">{{this.paymentMethod}}</td>
                                                        {{#if (eq this.orderStatus "cancelled")}}
                                                        <td class="order-td" style="color: red";>Cancelled</td>
                                                        {{else}}
                                                        <td class="order-td">{{this.paymentStatus}}</td>
                                                        {{/if}}                                                    
