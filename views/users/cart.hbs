<body>
    <div class="wrapper">
        <div class="header-area d-lg-block">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-auto">
                    </div>
                    <div class="col-auto d-lg-block ms-auto me-n3 pe-0">
                        <div class="header-navigation ps-6">
                            <ul class="main-nav">
                                {{!-- <li class="main-nav-item active"><a class="main-nav-link" href="/">Home</a></li>
                                --}}
                                <li class="main-nav-item"><a class="main-nav-link" href="/shop_by_category/1">Shop by
                                        category</a></li>
                                {{!-- <li class="main-nav-item"><a class="main-nav-link" href="">DSLR</a></li>
                                <li class="main-nav-item"><a class="main-nav-link" href="">Mirrorless</a></li>
                                <li class="main-nav-item"><a class="main-nav-link" href="">Action</a></li>
                                <li class="main-nav-item"><a class="main-nav-link" href=>Instant</a></li> --}}

                                <li class="main-nav-item"><a class="main-nav-link" href=>Contact</a>
                                </li>
                            </ul>
                        </div>
                    </div>                    
                </div>
            </div>
        </div>
        </header>
        <!--== End Header Wrapper ==-->
        <main class="main-content">
            <!--== Start Page Header Area Wrapper ==-->
            <div class="page-header-area">
                <div class="container">
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="page-header-content">
                                <h2 class="page-header-title">Cart</h2>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="page-header-thumb">
                                <img src="/images/page-title.png" alt="Image-HasTech" width="546"
                                    height="281">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!--== End Page Header Area Wrapper ==-->

            <!--== Start Product Filter Area Wrapper ==-->
            <div style="min-height: 100vh;" class="product-area section-two-space">
                <div class="product-area">
                    <div id="refreshh" class="container">
                        {{#if total}}
                        <div class="row">
                            <div {{!-- id="refreshh" --}} class="col-lg-12">
                                <div class="cart-table-wrap">
                                    <div class="table-responsive">
                                        <table class="cart-table">
                                            <thead>
                                                <tr>
                                                    <th class="width-thumbnail"></th>
                                                    <th class="width-name2">Product</th>
                                                    <th class="width-price"> Price</th>
                                                    <th class="width-quantity">Quantity</th>
                                                    <th class="width-subtotal">Subtotal</th>
                                                    <th class="width-remove"></th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                {{#each cart}}
                                                <tr>
                                                    <td class="product-thumbnail">
                                                        <a href=""><img class="w-80"
                                                                src="images/products/{{this.product.images.[0]}}"
                                                                alt="Image" width="96" height="96"></a>
                                                    </td>
                                                    <td class="product-name">
                                                        <h5><a href="/product/{{this.product._id}}">{{this.product.name}}</a></h5>
                                                    </td>
                                                    <td class="product-price"><span
                                                            class="amount">₹{{this.product.selling}}</span></td>
                                                    <td class="cart-quality">
                                                        <div class="product-details-quality d-flex flex-row">

                                                            {{!-- <div class="pro-qty"> --}}

                                                                <a class=""
                                                                    onclick="changeQuantity('{{this.product._id}}',-1)">
                                                                    <div class="d-flex justify-content-center align-items-center"
                                                                        style="width: 30px; height: 20px; background-color: rgba(255, 2, 2, 0);">
                                                                        -</div>
                                                                </a>
                                                                <div class="d-flex justify-content-center align-items-center"
                                                                    style="width: 20px; height: 20px;">
                                                                    <span id="quantity-update">{{this.quantity}}</span>
                                                                </div>
                                                                <a class=""
                                                                    onclick="changeQuantity('{{this.product._id}}',1)">
                                                                    <div class="d-flex justify-content-center align-items-center"
                                                                        style="width: 30px; height: 20px; background-color: rgba(255, 166, 0, 0);">
                                                                        +</div>
                                                                </a>
                                                                {{!-- <input type="text" title="Quantity"
                                                                    value="{{this.quantity}}"> --}}
                                                                {{!--
                                                            </div> --}}
                                                        </div>
                                                    </td>
                                                    <td class="product-total"><span>₹{{multiply this.product.selling
                                                            this.quantity}}</span>
                                                    </td>
                                                    <td class="product-remove"><a
                                                            onclick="deleteCartItem('{{this.product._id}}')"><i
                                                                class="fa fa-trash-o"></i></a></td>
                                                </tr>
                                                {{/each}}
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-4">
                            </div>
                        </div>
                        <div class="row d-flex justify-content-end mt-5">
                            <div style="" class="col-md-12 col-lg-4">
                                <div class="grand-total-wrap mt-10 mt-lg-0">
                                    <div class="grand-total-content">
                                        <h5>Subtotal <span>₹{{total}}.00</span></h5>
                                        <h5>Shipping <span>₹50.00</span></h5>

                                        <div class="grand-total mt-4">
                                            {{#if total}}
                                            <h4>Total <span>₹{{add total 50}}</span></h4>
                                            {{else}}
                                            <h4>Total <span>₹0.00</span></h4>
                                            {{/if}}

                                        </div>
                                    </div>
                                    <div class="grand-total-btn">
                                        <a class="btn btn-link" href="/checkout">Proceed to checkout</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        {{else}}
                        <div class="row">
                            <div class="d-md-flex align-items-md-center height-100vh--md">
                                <div class="container text-center space-2 space-3--lg">
                                    <div class="w-md-80 w-lg-60 text-center mx-md-auto">
                                        <div class="mb-5">
                                            <img src="/images/empty_cart.webp" alt="empty cart image">
                                            <h1 class="h2">Your cart is currently empty</h1>
                                            <p>You must add some products to your shopping
                                                cart to view and manage their quantity. </p>
                                            <p>You can find the best cameras for your need by clicking here:</p>
                                        </div>
                                        <a class="btn btn-primary btn-wide" href="/">Start
                                            Shopping</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        {{/if}}
                    </div>
                </div>


            </div>
    </div>
    <!--== End Product Filter Area Wrapper ==-->

    </main>


