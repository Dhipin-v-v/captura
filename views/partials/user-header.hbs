<div class="header-middle">
    <div class="container">
        <div class="row align-items-center justify-content-between align-items-center">
            <div class="col-auto">
                <div class="header-logo-area">
                    <a href="/">
                        <img class="logo-main" src="/images/logo.png" width="182" height="31" alt="Logo">
                    </a>
                </div>
            </div>
            <div class="col-auto">
                <div id="refresh" class="header-action d-flex justify-content-end align-items-center">                                
                    {{#if login}}
                    <a class="header-action-wishlist" href="/account">
                        <i class="icon-user"></i>
                    </a>
                    {{else}}
                    <a class="" href="/login">
                        <i class="me-3 fw-bold">Login/Signup</i>
                    </a>
                    {{/if}}


                    {{#if login}}
                    <a class="header-action-wishlist" href="/wishlist">
                        <i class="icon-heart"></i>
                    </a>
                    {{else}}
                    <a class="header-action-wishlist" href="/login">
                        <i class="icon-heart"></i>
                    </a>
                    {{/if}}

                    {{#if login}}

                    <a onload="cartCount()" class="header-action-cart" href="/cart">
                        <i class="icon-handbag"></i>
                        <span class="cart-count" id="cart-count">{{cartCount}}</span>
                    </a>

                    {{else}}
                    <a class="header-action-cart" href="/login">
                        <i class="icon-handbag"></i>
                    </a>
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
</div>