          <div id="product-table-refresh" class="tm-product-table-container">
            <table class="table table-hover tm-table-small tm-product-table">
              <thead>
                <tr>
                  <th style="background-color: #435c70;" class="sticky-header" scope="col">SL NO</th>
                  <th style="background-color: #435c70;" class="sticky-header" scope="col">PRODUCT NAME</th>
                  <th style="background-color: #435c70;" class="sticky-header" scope="col">BRAND</th>
                  <th style="background-color: #435c70;" class="sticky-header" scope="col">CATEGORY</th>
                  <th style="background-color: #435c70;" class="sticky-header" scope="col">ACTUAL PRICE</th>
                  <th style="background-color: #435c70;" class="sticky-header" scope="col">SELLING PRICE</th>
                  <th style="background-color: #435c70;" class="sticky-header" scope="col">STOCK</th>
                  <th style="background-color: #435c70;" class="sticky-header" scope="col">IMAGE</th>
                  <th style="background-color: #435c70;" class="sticky-header" scope="col"></th>
                </tr>
              </thead>
              <tbody>
                {{#each product}}
                <tr>
                  {{!-- <th scope="row"><input type="checkbox" /></th> --}}
                  {{!-- <td class="tm-product-name">1</td>
                  <td class="tm-product-name">Lorem Ipsum Product 1</td> --}}
                  <td class="pl-3">{{indexUpdate @index}}</td>
                  <td style="max-width:200px;" class="pl-3"><a style=" color:azure"
                      href="/product/{{this._id}}">{{this.name}}</a></td>
                  <td class="pl-3">{{this.brand}}</td>
                  <td class="pl-3">{{this.category.category}}</td>
                  <td class="pl-3">{{this.actual}}</td>
                  <td class="pl-3">{{this.selling}}</td>
                  <td class="pl-3">{{this.stock}}</td>
                  <td class=""><img style="height: 80px; width:80px; border: 2px solid #435c70; border-radius: 8px "
                      src="/images/products/{{this.images.[0]}}" alt="product image"></td>
                  <td>
                    <a href="/admin/edit_product/{{this._id}}" class="tm-product-delete-link">
                      <i class="far fa fa-edit tm-product-delete-icon"></i>
                    </a>
                    <a onclick="deleteProduct('{{this._id}}')" class="tm-product-delete-link">
                      <i class="far fa-trash-alt tm-product-delete-icon"></i>
                    </a>
                  </td>
                </tr>
                {{/each}}
              </tbody>
            </table>
          </div>
