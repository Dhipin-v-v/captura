        <div class="col-sm-12 col-md-12 col-lg-12 col-xl-12 tm-block-col">
          <div class="tm-bg-primary-dark tm-block tm-block-products">
            <div id="userTable" style="min-height: 600px;" class="tm-product-table-container">
              <table class="table table-sm ">
                <thead>
                  <tr>
                    <th style="background-color: #435c70;" class="sticky-header" scope="col">SL no.</th>
                    <th style="background-color: #435c70;" class="sticky-header" scope="col">Name</th>
                    <th style="background-color: #435c70;" class="sticky-header" scope="col">Email</th>
                    <th style="background-color: #435c70;" class="sticky-header" scope="col">Verified</th>
                    <th style="background-color: #435c70;" class="sticky-header" scope="col">Status</th>
                    <th style="background-color: #435c70;" class="sticky-header" scope="col"></th>
                  </tr>
                </thead>
                <tbody>
                  {{#each userData}}
                  <tr>
                    <th scope="row">{{indexUpdate @index}}</th>
                    <td>{{this.name}}</td>
                    <td>{{this.email}}</td>
                    {{#if this.verified}}
                    <td>Yes</td>
                    {{else}}
                    <td>No</td>
                    {{/if}}
                    {{#if isActive}}
                    <td>Active</td>
                    {{else}}
                    <td>Blocked</td>
                    {{/if}}

                    {{#if isActive}}
                    <td><a class="btn btn-sm btn-danger" onclick="blockUser('{{this._id}}')">Block</a></td>
                    {{else}}
                    <td><a class="btn btn-sm btn-info" onclick="unblockUser('{{this._id}}')">Unblock</a></td>
                    {{/if}}

                  </tr>
                  {{/each}}
                </tbody>
              </table>
            </div>
